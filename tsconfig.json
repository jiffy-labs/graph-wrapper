{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}